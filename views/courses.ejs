<!-- START WITH TITLE, CLOSE HEAD, OPEN BODY -->
<%- include('partials/header') -%>

<title>EduLink Â· Courses</title>
</head>
<body>
  <div>
    <main>
        <!--Header And Title-->
        <section id="header">
            <div class="container-fluid nav-container">
                <nav class="navbar navbar-expand-md navbar-light ">
                    <!-------BRAND-------->
                    <a class="navbar-brand" href="/"><span class="edu"><strong>Edu</strong></span>Link</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                    </button>
                    <!---------NAV ITEMS------------>
                    <div class="navbar-collapse collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto ml-auto">
                            <li class="nav-itme">
                                <a class="nav-link underline" href="/">Home</a>
                            </li>
                            <li class="nav-itme">
                                <a class="nav-link underline" href="/courses">Courses</a>
                            </li>
                            <li class="nav-itme">
                                <a class="nav-link underline" href="#">About</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item"><a href="" class="nav-link"><button class="btn btn-md sing-up">Sign up</button></a></li>
                            <li class="nav-item"><a href="" class="nav-link"> <button class="btn btn-md btn-color btn-danger" type="button">Log in</button></a></li> 
                        </ul>
                        
                    </div>
                </nav>
                
            </div>
            <div class="colored-section">
              <div class="container-fluid">
                  <h2 class="section-heading">Our Courses</h2>
               </div>   
            </div>
          </section>

          <section id="courses">
            <div class="container-fluid">
              <div class="row">
                <% subjects.forEach((subject) => { %> <!-- Loop through subjects array -->
                  <div class="col-md-4">
                    <div class="card">
                      <img class="card-img-top" src="<%= subject.image %>" alt="Card image cap"> <!-- Use subject.image property -->
                      <div class="card-body">
                        <h5 class="card-title" style="text-align: left;"><%=subject.name%></h5> <!-- Use subject.name property -->
                        <p class="card-text" style="text-align: left"><%=(subject.description).substring(0,150) + '...'%></p> <!-- Use subject.description property -->
                        <div class="row">
                          <div class="col-md-6">
                            <p><img src="images/chapter.png" alt="chapter-icon" height="25px" class="icon"> Chapters: <%=subject.chapters.length%></p> <!-- Use subject.chapters.length to count chapters -->
                          </div>
                          <div class="col-md-6">
                            <p><img src="images/book.png" alt="lesson-icon" height="25px" class="icon"> Lessons: <%=subject.lessons.length%></p> <!-- Use subject.lessons.length to count lessons -->
                          </div>
                        </div>
                        <div>
                          <a href="/courses/<%= subject.slug %>"><button class="btn btn-danger btn-color btn-lg download-button">Go to Course</button></a> <!-- Use subject.slug property to construct the course URL -->
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </section>
          
  <!------------------Footer----------------------->

<!-- DON't USE CLOSING BODY!!! -->
<%- include('partials/footer') -%>