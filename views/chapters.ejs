<!-- START WITH TITLE, CLOSE HEAD, OPEN BODY -->
<%- include('partials/header') -%>
<!-- /courses/:subject -->
<title>EduLink Â· Chapters</title>
</head>
<body>
    <div>
        <section id="chapter-header">
            <div class="container-fluid nav-container">
                <nav class="navbar navbar-expand-md navbar-light ">
                    <!-------BRAND-------->
                    <a class="navbar-brand" href="/"><span class="edu"><strong>Edu</strong></span>Link</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                     <span class="navbar-toggler-icon"></span>
                    </button>
                    <!---------NAV ITEMS------------>
                    <div class="navbar-collapse collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto ml-auto">
                            <li class="nav-itme">
                                <a class="nav-link underline" href="/">Home</a>
                            </li>
                            <li class="nav-itme">
                                <a class="nav-link underline" href="/courses">Courses</a>
                            </li>
                            <li class="nav-itme">
                                <a class="nav-link underline" href="#">About</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item"><a href="" class="nav-link"><button class="btn btn-md sing-up">Sign up</button></a></li>
                            <li class="nav-item"><a href="" class="nav-link"> <button class="btn btn-md btn-color btn-danger" type="button">Log in</button></a></li> 
                        </ul>
                        
                    </div>
                </nav>
                
            </div>
            <!-----HERE IS THE CONTENT ---->
            <div class="colored-section">
              <div class="container subject-header-container">
                  <h2 class="section-heading"><%=subjectName%></h2>
               </div>   
            </div>
          </section>

          <section id="chapter-collection">
            <div class="container"> 
                <% chaptersInfo.forEach((chapter, index)=>{ %>      
                  <div class="chapter-container shadow">
                        <div class="row">
                    <!-- Chapter name & pic -->
                        <img src="/images/<%=chapter.image%>" class="chapter-icon" height="75px" alt="<%=chapter.image%>"><a href="/courses/<%=subjectSlug%>/<%=chapter.title%>" class="chapter-name"><%=chapter.title%></a>
                        </div>
                  <!-- Breaker Div -->
                  <div class="line"></div>
                  <!-- Topics  -->
                  <div class="row topic-raw">
                    <div class="col-md-12">
                        <% if (chapter.description) {%>
                            <p class="topic-name"><%=(chapter.description).substring(0, 150) + '...'%></p>
                        <%} else {%>
                            <p class="topic-name">Chapter description is not available...</p>
                        <%}%>
                    </div>
                  </div>
                 </div> 
                 <% })%>     
                
            </div>
          </section>
    </div>
<%- include('partials/footer') -%>